
#SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

include ${TRICK_HOME}/share/trick/makefiles/Makefile.common

# Flags passed to the preprocessor.
TRICK_CPPFLAGS += -I${GTEST_HOME}/include -I$(TRICK_HOME)/include -g -Wall -Wextra ${TRICK_SYSTEM_CXXFLAGS} ${TRICK_TEST_FLAGS}

TRICK_LIBS = ${TRICK_LIB_DIR}/libtrick_math.a
TRICK_EXEC_LINK_LIBS += -L${GTEST_HOME}/lib64 -L${GTEST_HOME}/lib -lgtest -lgtest_main -lpthread
TRICK_EXEC_LINK_LIBS += -lm

GTEST_HEADERS = $(GTEST_DIR)/include/gtest/*.h \
                $(GTEST_DIR)/include/gtest/internal/*.h

TESTS = UnitTestPDIPOptimization

OTHER_OBJECTS = \
    ../object_${TRICK_HOST_CPU}/dPDIP_solver.o

all : test

test: $(TESTS)
	./UnitTestPDIPOptimization --gtest_output=xml:${TRICK_HOME}/trick_test/UnitTestPDIPOptimization.xml

clean :
	rm -f $(TESTS)
	rm -f *.o
	rm -rf XMLtestReports
UnitTestPDIPOptimization.o : UnitTestPDIPOptimization.cpp
	$(TRICK_CXX) $(TRICK_CPPFLAGS) -c $<

UnitTestPDIPOptimization : UnitTestPDIPOptimization.o
	@echo 'Building UnitTestPDIPOptimization'
	$(TRICK_CXX) $(TRICK_SYSTEM_LDFLAGS) -o $@ $^ $(OTHER_OBJECTS) -L${TRICK_HOME}/lib_${TRICK_HOST_CPU} $(TRICK_LIBS) $(TRICK_EXEC_LINK_LIBS)
